---
import statsWowDesktop1 from "#/assets/images/stats-wow-1-desktop.png";
import statsWowMobile1 from "#/assets/images/stats-wow-1-mobile.png";
import statsWowDesktop2 from "#/assets/images/stats-wow-2-desktop.png";
import statsWowMobile2 from "#/assets/images/stats-wow-2-mobile.png";
import athens from "../assets/images/athens.png";
import wow from "../assets/images/wow-legends.png";
import CampaignItem from "./campaign-item.astro";

const items = [
  {
    image: wow,
    title: "World of Warships",
    description:
      "We specialize in creating impactful gaming campaigns with measurable success.",
    media: {
      mobile: [statsWowMobile1, statsWowMobile2],
      desktop: [statsWowDesktop1, statsWowDesktop2],
    },
    mediaDesc: [
      "We partnered with 560 influencers to promote the game, resulting in 13,975 new players.",
      "World of Warships had 39,435 website visits, and over 348 million minutes of watch time.",
    ],
  },
  {
    image: athens,
    title: "Athens's League",
    description:
      "We organized an exciting Dota 2 tournament featuring 8 teams, streamed on Trovo.",
    media: {
      mobile: [statsWowMobile1, statsWowMobile2],
      desktop: [statsWowDesktop1, statsWowDesktop2],
    },
    mediaDesc: [
      "We partnered with 560 influencers to promote the game, resulting in 13,975 new players.",
      "World of Warships had 39,435 website visits, and over 348 million minutes of watch time.",
    ],
  },
  // {
  //   image: leagueoflegends,
  //   title: "League of Legends",
  //   description:
  //     "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore.",
  // },
];
---

<section class="p-8 md:p-16 overflow-hidden" id="campaigns">
  <div class="max-w-7xl mx-auto flex flex-col gap-12">
    <h2
      class="text-2xl md:text-5xl font-bold font-euro mx-auto md:mx-0 text-center md:text-left"
      data-aos="fade-right"
    >
      <span class="text-white">OUR </span>
      <span class="text-[#2ec4b6]">CAMPAIGNS</span>
    </h2>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:gap-8">
      {
        items.map((item, index) => (
          <div data-aos="fade-up" data-aos-delay={index * 200}>
            <CampaignItem campaign={item} index={index} />
          </div>
        ))
      }
    </div>
  </div>
</section>
