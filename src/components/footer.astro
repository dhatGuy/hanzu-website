            data-aos="fade-up"
          >
            <a href="#" class="block w-32 sm:w-40 lg:w-48">
              <Image
                src={logo}
                alt="Brand"
                width={200}
                height={200}
                loading="eager"
                class="w-full h-auto object-contain aspect-square"
              />
