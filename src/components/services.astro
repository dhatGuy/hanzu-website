---
import building from "#/assets/images/building.jpg";
import influencer from "#/assets/images/influencer-marketing.png";
import { getImage } from "astro:assets";
import marketingVideo from "../assets/videos/video_marketing.mp4";
import ServicesSection from "./react/service-section";

const optimizeImage = await getImage({
  src: influencer,
  format: "webp",
});

const optimizeBuilding = await getImage({
  src: building,
  format: "webp",
});

const items = [
  {
    number: "01",
    title: "INFLUENCER MARKETING",
    description:
      "Connecting brands with gaming influencers to amplify their reach.",
    image: optimizeImage,
  },
  {
    number: "02",
    title: "ESPORTS",
    description: "Organizing and supporting competitive gaming experiences.",
    image: optimizeBuilding,
  },
  {
    number: "03",
    title: "VIDEO MARKETING",
    description: "Creating engaging video content to boost brand visibility",
    video: marketingVideo,
  },
];
---

<ServicesSection items={items} client:load />
