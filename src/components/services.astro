---
import { Image } from "astro:assets";
import influencer from "/src/assets/images/influencer-marketing.png";

const items = [
  {
    number: "01",
    title: "INFLUENCER MARKETING",
    description:
      "Connecting brands with gaming influencers to amplify their reach.",
  },
  {
    number: "02",
    title: "ESPORTS",
    description: "Organizing and supporting competitive gaming experiences.",
  },
  {
    number: "03",
    title: "VIDEO MARKETING",
    description: "Creating engaging video content to boost brand visibility",
  },
];
---

<section class="p-8 md:p-16 overflow-hidden" id="services">
  <div class="max-w-7xl mx-auto flex flex-col gap-12">
    <h2
      class="text-3xl font-bold font-euro text-center md:text-left"
      data-aos="fade-up"
    >
      <span class="text-white">OUR </span>
      <span class="text-[#40E0D0]">SERVICES</span>
    </h2>
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="flex flex-col gap-4">
        {
          items.map((service, index) => (
            <div
              class="flex flex-col gap-3"
              data-aos="fade-right"
              data-aos-delay={index * 100}
            >
              <div class="flex items-baseline mx-auto">
                <span class="text-[#FF3131] text-2xl font-bold font-euro">
                  {service.number}
                </span>
                {/* one word per line */}
                <h3 class="text-white text-xl font-bold tracking-wider font-euro">
                  {service.title}
                </h3>
              </div>
              {service.description && (
                <p class="text-[#8B8B8B]">{service.description}</p>
              )}
            </div>
          ))
        }
      </div>
      <div class="relative" data-aos="fade-left">
        <div class="rounded-3xl overflow-hidden">
          <Image
            src={influencer}
            alt="Influencer Marketing"
            class="w-full h-full"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
