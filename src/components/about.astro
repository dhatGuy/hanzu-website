---
import { Image } from "astro:assets";
import building from "../assets/images/building.jpg";

const items = [
  {
    title: "10",
    subtitle: "projects",
  },
  {
    title: "50",
    subtitle: "clients",
  },
  {
    title: "90",
    subtitle: "projects",
  },
];
---

<section class="p-8 md:p-16 overflow-hidden" id="about-us">
  <div class="max-w-7xl mx-auto flex flex-col gap-12">
    <h2 class="text-3xl font-bold font-euro" data-aos="fade-up">
      <span class="text-white">ABOUT </span>
      <span class="text-[#40E0D0]">US</span>
    </h2>
    <div class="grid grid-cols-1 gap-20 lg:grid-cols-2">
      <div class="" data-aos="fade-right">
        <Image
          src={building}
          alt="building"
          class="h-[32rem] w-full object-cover rounded-[2.5rem] border border-[#26557d]"
        />
      </div>
      <div class="flex flex-col gap-12" data-aos="fade-left">
        <p class="text-pretty text-white">
          Hanzu is a marketing and consultancy agency specializing in gaming and
          esports. We design impactful campaigns through influencer marketing,
          community management, esports and gaming events. By leveraging key
          digital platforms, we engage gaming communities, drive streaming
          content, and manage social media presence, helping brands build strong
          connections and achieve measurable results.
        </p>

        <div class="flex justify-between gap-8 flex-wrap">
          {
            items.map((item, i) => (
              <div
                class="flex flex-col items-center bg-[#2ec4b6] p-4 rounded-[2rem] flex-1 py-8 font-euro border border-[#26557d]"
                data-aos="fade-up"
                data-aos-delay={i * 100}
              >
                <p class="text-5xl font-bold">
                  <span class="text-white">{item.title}</span>+
                </p>
                <p class="uppercase font-semibold">{item.subtitle}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
