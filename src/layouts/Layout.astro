---
import "../assets/styles/styles.tailwind.css";
import "@fontsource/lato";
import Header from "../components/header.astro";
import { SEO, type Props } from "astro-seo";

const seoProps: Props = {
  title: "Hanzu - Your Site Title",
  description: "A brief description of your site for SEO purposes.",
  canonical: "https://www.yoursite.com",
  openGraph: {
    basic: {
      title: "Hanzu - Your Site Title",
      type: "website",
      image: "https://www.yoursite.com/og-image.jpg",
      url: "https://www.yoursite.com",
    },
  },
  twitter: {
    card: "summary_large_image",
    site: "@yourtwitterhandle",
    title: "Hanzu - Your Site Title",
    description: "A brief description of your site for SEO purposes.",
    image: "https://www.yoursite.com/twitter-image.jpg",
  },
  extend: {
    link: [{ rel: "icon", href: "/favicon.ico" }],
    meta: [{ name: "theme-color", content: "#ffffff" }],
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <SEO {...seoProps} />
    <title>Hanzu</title>
  </head>
  <body class="bg-[#001524]">
    <Header />
    <slot />

    <script>
      const header = document.getElementById("header");
      const root = document.documentElement;

      function updateHeaderHeight() {
        if (header) {
          const headerHeight = header.offsetHeight + 10;
          root.style.setProperty("--header-height", `${headerHeight}px`);
        }
      }

      updateHeaderHeight();

      window.addEventListener("resize", updateHeaderHeight);

      const observer = new ResizeObserver(() => {
        updateHeaderHeight();
      });

      if (header) {
        observer.observe(header);
      }
    </script>
  </body>
</html>
